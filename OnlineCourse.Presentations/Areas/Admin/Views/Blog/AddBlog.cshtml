@model BlogDto
@{
    ViewData["Title"] = "Yeni Blog Sayfası Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    <label>Blog Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />
    <label>Blog İçeriği</label>
    <input type="text" asp-for="Description" class="form-control" rows="5" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control"/>
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />
    <label>Blog Kategorisi</label>
    <select asp-items="@ViewBag.categories" asp-for="BlogCategoryId" class="form-control">
        <option>Kategori Seçin</option>
        </select>
    <br />

    <button class="btn btn-outline-primary">Kaydet</button>
    <a asp-action="Index" asp-controller="Blog" asp-area="Admin" class="btn btn-secondary">İptal</a>
</form>


