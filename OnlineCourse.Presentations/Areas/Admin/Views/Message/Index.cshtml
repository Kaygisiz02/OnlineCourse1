@model List<MessageDto>
@{
    ViewData["Title"] = "Gelen Mesajlar Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Gönderen Adı</th>
        <th>Gönderen Email</th>
        <th>Konu</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@count</th>
            <td>@item.MessageName</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>
                <button onclick="RemoveMessage(@item.MesageId)" class="btn btn-outline-danger">Mesajı Sil</button>
                <a asp-action="MessageDetail" asp-controller="Message" asp-area="Admin" asp-route-id="@item.MesageId" class="btn btn-outline-info">Mesajı aç</a>
            </td>

        </tr>

    }
</table>
<br />
<a asp-action="AddSocialMedia" asp-controller="SocialMedia" asp-area="Admin" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>
<br />
<script>
    function RemoveSocialMedia(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/SocialMedia/RemoveSocialMedia/" + id;
            }
        });
    }
</script>

