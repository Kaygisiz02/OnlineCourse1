@model MessageDto
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-hover table-bordered">
    <tr>
        <td>Gönderen Ad Soyad:</td>
        <td>@Model.MessageName</td>
    </tr>
    <tr>
        <td>Gönderen E-mail</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Gönderen Konusu:</td>
        <td>@Model.Subject</td>
    </tr>   
    <tr>
        <td>Gönderen İçeriği:</td>
        <td>@Model.Content</td>
    </tr>
</table>

<br />
<a asp-action="index" asp-controller="Message" asp-area="Admin" class="btn btn-outline-primary">Mesajlara Geri Dön</a>