@model List<AppUser>
@{
    ViewData["Title"] = "Kullanıcı listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıc Adı</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.UserName</td>
            <td>
                <a asp-action="AssignRole" asp-controller="RoleAssign" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Role Ata</a>
            </td>
        </tr>
    }
</table>