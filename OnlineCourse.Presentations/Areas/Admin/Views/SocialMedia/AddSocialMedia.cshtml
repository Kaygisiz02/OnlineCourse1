@model SocialMediaDto
@{
    ViewData["Title"] = "Yeni Sosyal Medya Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    <label>Sosyal Medya Adı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Sosyal Medya Url Linki</label>
    <input type="text" asp-for="UrlLink" class="form-control" />
    <span asp-validation-for="UrlLink" class="text-danger"></span>
    <br />
    <label>İkon</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <span asp-validation-for="Icon" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
    <a asp-action="Index" asp-controller="SocialMedia" asp-area="Admin" class="btn btn-secondary">İptal</a>
</form>


